@page
@model MyCrudAppRazor.Pages.Produtos.EditarModel
@{
}
<h1>Editar Produto</h1>

<form method="post">
    <div>
        <label for="Nome">Nome do Produto:</label>
        <input type="text" id="Nome" name="Nome" value="@Model.Produto.NomeProduto"/>
    </div>
    <div>
        <label for="Descricao">Descrição:</label>
        <textarea id="Descricao" name="Descricao" required>@Model.Produto.Descricao</textarea>
    </div>
    <div>
        <label for="Preco">Preço:</label>
        <input type="number" id="Preco" name="Preco" value="@Model.Produto.Preco" required />
    </div>
    <button type="submit">Salvar</button>
    <a asp-page="Produtos">Cancelar</a>
</form>