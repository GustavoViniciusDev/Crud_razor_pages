@page
@model MyCrudAppRazor.Pages.Produtos.ProdutosModel
@{
}

<h1>Lista de Produtos</h1>

<table>
    <thead>
        <tr>
            <th>Id do Produto</th>
            <th>Nome do Produto</th>
            <th>Descrição</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach( var produto in Model.Produtos)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.NomeProduto</td>
                <td>@produto.Descricao</td>
                <td>@produto.Preco</td>
                <td>
                       <a asp-page="Editar" asp-route-id="@produto.Id">Editar</a>
                       <a asp-page="Excluir" asp-route-id="@produto.Id">Excluir</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="Criar">Criar Novo Produto</a>